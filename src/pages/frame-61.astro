---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Frame 61">
    <!-- COPY HERE -->
    <!-- CUSTOMIZE YOUR PADDING HERE -->
    <div class="pt-44 pb-64">
        <div class="w-11/12 lg:w-10/12 mx-auto max-w-screen-pageMaxWidth">
            <div class="text-center mx-auto max-w-[816px]">
                <h3 class="text-sm lg:text-[22px]">Hereâ€™s a glance at</h3>
                <h2 class="text-3xl lg:text-4xl -mt-2">How it Works</h2>
            </div>
        </div>
        <!-- CUSTOMIZE YOUR MARGIN HERE -->
        <div class="mt-24">
            <!-- component -->
            <div class="w-11/12 lg:w-10/12 mx-auto max-w-screen-pageMaxWidth">
                <div class="flex flex-col md:flex-row gap-y-8">
                    <div class="md:w-1/3">
                        <div class="relative">
                            <img
                                class="w-10 h-10 mx-auto"
                                src="/images/frame-61-icon-1.svg"
                                alt="check white"
                            />
                        </div>
                        <!-- CUSTOMIZE YOUR MARGIN HERE -->
                        <div class="mt-8 w-10/12 mx-auto">
                            <div class="text-center">
                                <h4 class="font-medium text-sm lg:text-base">
                                    Step 1
                                </h4>
                                <h3 class="mt-4 text-xs lg:text-sm uppercase">
                                    Measure your walls
                                </h3>
                                <p class="mt-2 text-xs lg:text-sm">
                                    With the help of a measuring tool, determine
                                    the width and height of your wall.
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="md:w-1/3">
                        <div class="relative">
                            <div
                                class="hidden absolute md:flex align-center items-center align-middle content-center"
                                style="width: calc(100% - 2.5rem - 5rem); top: 50%; transform: translate(-50%, -50%)"
                            >
                                <div
                                    class="w-full bg-black rounded items-center align-middle align-center flex-1"
                                >
                                    <div
                                        class="w-0 bg-black py-[1px] rounded"
                                        style="width: 100%;"
                                    >
                                    </div>
                                </div>
                            </div>

                            <div class="relative">
                                <img
                                    class="w-10 h-10 mx-auto"
                                    src="/images/frame-61-icon-2.svg"
                                    alt="check white"
                                />
                            </div>
                        </div>

                        <!-- CUSTOMIZE YOUR MARGIN HERE -->
                        <div class="mt-8 w-10/12 mx-auto">
                            <div class="text-center">
                                <h4 class="font-medium text-sm lg:text-base">
                                    Step 2
                                </h4>
                                <h3 class="mt-4 text-xs lg:text-sm uppercase">
                                    Select size and quantity
                                </h3>
                                <p class="mt-2 text-xs lg:text-sm">
                                    Use our <a class="underline" href="/"
                                        >calculator</a
                                    > to define the amount of material you require.
                                </p>
                                <p class="font-medium text-[14px] my-2">OR</p>
                                <p class="mt-2 text-xs lg:text-sm">
                                    <a class="underline" href="/">Contact</a> us
                                    in case you need a custom order.
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="md:w-1/3">
                        <div class="relative">
                            <div
                                class="hidden absolute md:flex align-center items-center align-middle content-center"
                                style="width: calc(100% - 2.5rem - 5rem); top: 50%; transform: translate(-50%, -50%)"
                            >
                                <div
                                    class="w-full bg-black rounded items-center align-middle align-center flex-1"
                                >
                                    <div
                                        class="w-0 bg-black py-[1px] rounded"
                                        style="width: 100%;"
                                    >
                                    </div>
                                </div>
                            </div>

                            <div class="relative">
                                <img
                                    class="w-10 h-10 mx-auto"
                                    src="/images/frame-61-icon-3.svg"
                                    alt="check white"
                                />
                            </div>
                        </div>

                        <!-- CUSTOMIZE YOUR MARGIN HERE -->
                        <div class="mt-8 w-10/12 mx-auto">
                            <div class="text-center">
                                <h4 class="font-medium text-sm lg:text-base">
                                    Step 3
                                </h4>
                                <h3 class="mt-4 text-xs lg:text-sm uppercase">
                                    CHOOSE material
                                </h3>
                                <p class="mt-2 text-xs lg:text-sm">
                                    Select the desirable wallpaper type you want
                                    to order.
                                </p>
                                <p class="font-medium text-[14px] my-2">OR</p>
                                <p class="mt-2 text-xs lg:text-sm">
                                    Get a sample first.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- COPY HERE END -->
</BaseLayout>
