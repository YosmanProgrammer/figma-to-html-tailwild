    <!-- CUSTOMIZE YOUR PADDING HERE -->
    <div class="pt-44 pb-64">
        <div class="w-11/12 lg:w-10/12 mx-auto max-w-screen-pageMaxWidth">
            <div class="text-center mx-auto max-w-[816px]">
                <h3 class="text-sm lg:text-[22px]">Before you start</h3>
                <h2 class="text-3xl lg:text-4xl -mt-2">Check your order</h2>
            </div>
