---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Frame 63">
    <!-- COPY HERE -->
    <!-- CUSTOMIZE YOUR PADDING HERE -->
    <div class="pt-64 pb-60">
        <div class="w-11/12 lg:w-10/12 mx-auto max-w-[604px]">
            <div class="text-center">
                <h2 class="text-3xl lg:text-4xl -mt-2">Apply and enjoy!</h2>
                <p class="text-xs lg:text-[20px] mt-2">
                    Please email your information to marketing@ondecor.com weâ€™ll
                    email you with the code discount.
                </p>
            </div>
            <!-- CUSTOMIZE YOUR MARGIN HERE -->
            <div class="mt-16">
                <form action="#">
                    <div class="space-y-6">
                        <div class="flex gap-x-8">
                            <div class="w-1/2">
                                <label class="text-xs" for="name">Name</label>
                                <input
                                    id="name"
                                    class="block w-full border border-gris-5 mt-1"
                                    type="text"
                                    required
                                />
                            </div>
                            <div class="w-1/2">
                                <label class="text-xs" for="last-name"
                                    >Last Name</label
                                >
                                <input
                                    id="last-name"
                                    class="block w-full border border-gris-5 mt-1"
                                    type="text"
                                    required
                                />
                            </div>
                        </div>
                        <div>
                            <label class="text-xs" for="email">Email</label>
                            <input
                                id="email"
                                class="block w-full border border-gris-5 mt-1"
                                type="email"
                                required
                            />
                        </div>
                        <div class="flex gap-x-8">
                            <div class="w-1/2">
                                <label class="text-xs" for="phone-number"
                                    >Phone Number</label
                                >
                                <input
                                    id="phone-number"
                                    class="block w-full border border-gris-5 mt-1"
                                    type="tel"
                                    required
                                />
                            </div>
                            <div class="w-1/2">
                                <label
                                    class="text-xs"
                                    for="portafolio-instagram"
                                    >Portfolio / Instagram</label
                                >
                                <input
                                    id="portafolio-instagram"
                                    class="block w-full border border-gris-5 mt-1"
                                    type="text"
                                    required
                                />
                            </div>
                        </div>
                        <div class="flex gap-x-8">
                            <div class="w-1/2">
                                <label class="text-xs" for="date-of-birth"
                                    >Date of Birth</label
                                >
                                <input
                                    id="date-of-birth"
                                    class="block w-full border border-gris-5 mt-1"
                                    type="date"
                                    required
                                />
                            </div>
                            <div class="w-1/2">
                                <label class="text-xs" for="city">City</label>
                                <input
                                    id="city"
                                    class="block w-full border border-gris-5 mt-1"
                                    type="text"
                                    required
                                />
                            </div>
                        </div>
                        <div>
                            <label class="text-xs" for="company-name"
                                >Company Name</label
                            >
                            <input
                                id="company-name"
                                class="block w-full border border-gris-5 mt-1"
                                type="text"
                                required
                            />
                        </div>
                        <div>
                            <label class="text-xs" for="work-area"
                                >Work area</label
                            >
                            <input
                                id="work-area"
                                class="block w-full border border-gris-5 mt-1"
                                type="text"
                                required
                            />
                        </div>
                        <div class="flex items-center justify-center gap-x-2">
                            <input
                                class="flex-shrink-0"
                                type="checkbox"
                                id="terms"
                            />
                            <label class="text-xs" for="terms">
                                I accept to receive special offers only for
                                professionals
                            </label>
                        </div>
                    </div>
                    <!-- CUSTOMIZE YOUR MARGIN HERE -->
                    <div class="mt-14">
                        <div class="text-center">
                            <button
                                class="inline-block border border-black font-medium py-4 px-8 text-xs uppercase"
                                type="submit">Send</button
                            >
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- COPY HERE END -->
</BaseLayout>
